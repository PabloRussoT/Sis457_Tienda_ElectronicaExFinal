@model IEnumerable<WebTIendaElectronica.Models.Ventum>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<h1>Ventas</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary me-2">
        <i class="fas fa-plus me-1"></i> Crear Nueva Venta
    </a>
    <a asp-controller="VentaDetalles" asp-action="Index" class="btn btn-info">
        Detalle Ventas
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Transaccion</th>
                <th>Fecha</th>
                <th>Total</th> 
                <th>FechaRegistro</th>
                <th>Cliente</th>
                <th>Empleado</th>
                <th>Producto</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Transaccion)</td>
                    <td>@Html.DisplayFor(modelItem => item.Fecha)</td>
                    <td>@Html.DisplayFor(modelItem => item.Total)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaRegistro)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdClienteNavigation.NombreCompleto)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdEmpleadoNavigation.Nombres)</td>
                    <td>@Html.DisplayFor(modelItem => item.IdProductoNavigation.Descripcion)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-2" title="Editar">
                            <i class="fas fa-edit px-1"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-2" title="Detalles">
                            <i class="fas fa-info-circle px-1"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Eliminar">
                            <i class="fas fa-trash-alt px-1"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}
